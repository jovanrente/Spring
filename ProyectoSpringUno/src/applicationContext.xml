<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
	<context:property-placeholder location="classpath:datosEmpresasa.properties"/>
	<!-- creacion de la dependencia  -->
	<bean id="miInforme" class="com.jovan.ioc.Informe"></bean>
	
	<bean id="miEmpleado" class="com.jovan.ioc.DirectorEmpleado"
		   init-method="init"
		   destroy-method="metodofinal">
		<constructor-arg ref="miInforme"></constructor-arg>
		<property name="email" value="${email}"></property>
		<property name="nombreEmpresa" value="${nombreEmpresa}"></property>
		
	</bean>
	<bean id="secretario" class="com.jovan.ioc.SecretarioEmpleado">
		<property name="informe" ref="miInforme"></property>
		<property name="email" value="secretaria@test.com"></property>
		<property name="nomreEmpresa" value="testSpring"></property>
	</bean>

</beans>